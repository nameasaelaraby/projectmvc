@model DAL.ViewModels.BillVM

@{
    ViewData["Title"] = "Delete Bill";
}

<h1>Delete Bill</h1>

<h3>Are you sure you want to delete this bill?</h3>

<div>
    <h4>Bill Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BillId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AmountDue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AmountDue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CounterId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CounterId)
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="BillId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
