@model DAL.ViewModels.BillVM

<h2>Bill Details</h2>

<div>
    <h4>Bill</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Issue Date</dt>
        <dd class="col-sm-10">@Model.IssueDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Amount Due</dt>
        <dd class="col-sm-10">@Model.AmountDue</dd>

        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Counter Id</dt>
        <dd class="col-sm-10">@Model.CounterId</dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Edit", new { id = Model.BillId })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>
