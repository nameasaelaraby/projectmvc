@model IEnumerable<DAL.ViewModels.ComplaintVM>

@{
    ViewData["Title"] = "Complaint List";
}

<h1>Complaint List</h1>



<p>
    <a asp-action="Create" class="btn btn-primary">Create New Complaint</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Submission Date</th>
            <th>Customer ID</th>
            <th>Status</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.SubmissionDate.ToString("d")</td>
                <td>@item.CustomerId</td>
                <td>@item.Status</td>
                <td><a asp-action="Details" asp-route-id="@item.ComplaintId" class="btn btn-success">Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@item.ComplaintId" class="btn btn-warning">Edit</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.ComplaintId" class="btn btn-danger">Delete</a></td>
            
            </tr>
        }
    </tbody>
</table>
