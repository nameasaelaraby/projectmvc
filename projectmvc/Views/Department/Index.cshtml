@{
    ViewData["Title"] = "Index";
}
@inject DAL.Repo.DepartmentRepo.IDepartmentRepo depts

<div class="body table-responsive">



    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Department</a>
    </p>



    <table class="table">
        <thead>
            <tr>
                <th>Department NAME</th>
               
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in depts.GetAll().Result)
            {
                <tr>
                    <td>@item.DepartmentName</td>
                   
                    <td><a asp-action="Details" asp-controller="Department" asp-route-id="@item.DepartmentId" class="btn btn-success">Details</a></td>
                    <td><a asp-action="Edit" asp-controller="Department" asp-route-id="@item.DepartmentId" class="btn btn-warning">Edit</a></td>

                    <td><a asp-action="Delete" asp-controller="Department" asp-route-id="@item.DepartmentId" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

