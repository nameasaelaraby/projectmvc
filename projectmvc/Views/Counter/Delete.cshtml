@model DAL.ViewModels.CounterVM

@{
    ViewData["Title"] = "Delete Counter";
}

<h1>Delete Counter</h1>

<h3>Are you sure you want to delete this counter?</h3>

<div>
    <h4>Counter Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CounterId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CounterId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentReading)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentReading)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReadingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReadingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="CounterId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
