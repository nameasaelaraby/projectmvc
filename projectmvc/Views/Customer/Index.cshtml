@model IEnumerable<DAL.ViewModels.CustomerVM>

@{
    ViewData["Title"] = "Customer List";
}

<h1>Customer List</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Customer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Address</td>
                <td>@item.PhoneNumber</td>
                <td><a asp-action="Details" asp-controller="Customer" asp-route-id="@item.CustomerId" class="btn btn-success">Details</a></td>
                <td><a asp-action="Edit" asp-controller="Customer" asp-route-id="@item.CustomerId" class="btn btn-warning">Edit</a></td>

                <td><a asp-action="Delete" asp-controller="Customer" asp-route-id="@item.CustomerId" class="btn btn-danger">Delete</a></td>

            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this customer?');
    }
</script>
