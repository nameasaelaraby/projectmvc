@model DAL.ViewModels.BranchVM

@{
    ViewData["Title"] = "Delete Branch";
}

<h1>Delete Branch</h1>

<h3>Are you sure you want to delete this branch?</h3>

<div>
    <h4>Branch Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BranchId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BranchId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BranchName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BranchName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BranchLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BranchLocation)
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="BranchId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
