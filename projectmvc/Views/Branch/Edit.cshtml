@model DAL.ViewModels.BranchVM

@{
    ViewData["Title"] = "Edit Branch";
}

<h1>Edit Branch</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="BranchId" class="control-label"></label>
        <input asp-for="BranchId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="BranchName" class="control-label"></label>
        <input asp-for="BranchName" class="form-control" />
        <span asp-validation-for="BranchName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BranchLocation" class="control-label"></label>
        <input asp-for="BranchLocation" class="form-control" />
        <span asp-validation-for="BranchLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
